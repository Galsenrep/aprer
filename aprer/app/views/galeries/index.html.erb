<%= provide :title, "Galerie" %>
    <!-- Page Content -->
    <div class="container">
                <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Galerie
                </h1>
                <ol class="breadcrumb">
                  <li>
                    <%= link_to "Accueil", root_path %>
                  </li>
                  <li>
                    <%= link_to "Galerie", galerie_path, class: 'active' %>
                  </li>
                </ol>
            </div>
        </div>

      <% @lesimage.in_groups_of(3, false).each do |group| %>
        <div class="row">
        <% group.each do |imag| %>
            <div class="col-lg-4 col-md-4 col-xs-6 thumb">
                <div class="thumbnail">
                    <%= image_tag imag.image.url(:medium), class: "img-responsive" %>
                    <div class="caption">
                      <%= link_to imag.titre, lesimage_path(imag.id), class: "btn btn-primary gbtn" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
    </div>
    <!-- /.container -->
