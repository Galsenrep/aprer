<div class="row">
  <div class="col-md-10 ajust">
    <h1>Ajouter une nouvelle image</h1>
    <hr>
    <%= form_for @lesimage, url: lesimages_path, html: { multipart: true } do |form| %>
    <div class="form-group">
      <label for="">Titre de l'image':</label>
      <%= form.text_field :titre, class:'form-control' %>
    </div>

    <div class="form-group">
      <label for="">Image:</label>
      <%= form.file_field :image, class:'' %>
    </div>
      <% if user_signed_in? %>
        <!-- true -->
        <%= form.hidden_field :user_id, value: current_user.id %>
      <% end %>

    <div class="form-group">
      <button type="submit" class="btn btn-success"> Enregistrer </button>
      <a href="<%= lesimages_path %>" class="btn btn-danger">Annuler</a>
    </div>

    <% end %>

  </div>
</div>
