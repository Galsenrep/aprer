<div class="row">
  <div class="col-md-8 ajust">
    <h1>Cr√©er un nouvel Article</h1>
    <hr>

    <%= form_for @article, url: articles_path, html: { multipart: true } do |form| %>
    <div class="form-group">
      <label for="">Titre de l'article:</label>
      <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <label for="">Contenu de l'article:</label>
      <%= form.cktext_area :content, class:'form-control' %>
    </div>

    <div class="form-group">
      <label for="">Image illustrant l'article:</label>
      <%= form.file_field :image, class:'' %>
    </div>
    <% if user_signed_in? %>
    <%= form.hidden_field :user_id, value: current_user.id %>

    <% end %>
    <div class="form-group">
      <button type="submit" class="btn btn-success"> Enregistrer </button>
      <a href="<%= articles_path %>" class="btn btn-danger">Annuler</a>
    </div>

    <% end %>

  </div>

</div>
