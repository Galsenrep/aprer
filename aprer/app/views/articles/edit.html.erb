<div class="row">
  <div class="col-md-8 ajust">
    <h1>Modification de l'Article #<%= @article.id %></h1>
    <hr>

    <%= form_for @article, html: { multipart: true } do |form| %>
    <div class="form-group">
      <label for="">Titre de l'article:</label>
      <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <label for="">Contenu de l'article:</label>
      <%= form.cktext_area :content, class:'form-control' %>
    </div>

    <div class="form-group">
      <label for="">Image illustrant l'article:</label>
      <%= form.file_field :image %>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-success"> Enregistrer </button>
      <a href="<%= articles_path %>" class="btn btn-danger">Annuler</a>
    </div>

    <% end %>
  </div>
</div>
